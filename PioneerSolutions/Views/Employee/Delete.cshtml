@using PioneerSolutions.ViewModel
@model  EmployeeListViewModel

@{
    ViewData["Title"] = "Delete Employee";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4><i class="fas fa-exclamation-triangle"></i> @ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <strong>Warning:</strong> Are you sure you want to delete this employee? This action cannot be undone.
                    </div>

                    <dl class="row">
                        <dt class="col-sm-3">Code:</dt>
                        <dd class="col-sm-9"><strong>@Model.Code</strong></dd>

                        <dt class="col-sm-3">Name:</dt>
                        <dd class="col-sm-9">@Model.Name</dd>

                        @if (Model.CustomProperties.Any())
                        {
                            @foreach (var prop in Model.CustomProperties)
                            {
                                <dt class="col-sm-3">@prop.Key:</dt>
                                <dd class="col-sm-9">@prop.Value</dd>
                            }
                        }
                    </dl>

                    <form asp-action="Delete" method="post" class="d-inline">
                        <input asp-for="Id" type="hidden" />
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Yes, Delete
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Cancel
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>