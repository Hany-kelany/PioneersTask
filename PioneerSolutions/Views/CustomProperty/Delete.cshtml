@using PioneerSolutions.ViewModel
@model CustomPropertyViewModel

@{
    ViewData["Title"] = "Delete Custom Property";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4><i class="fas fa-exclamation-triangle"></i> @ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <strong>Warning:</strong> Are you sure you want to delete this custom property? This action cannot be undone and will remove all associated data.
                    </div>

                    <dl class="row">
                        <dt class="col-sm-3">Name:</dt>
                        <dd class="col-sm-9">@Model.Name</dd>

                        <dt class="col-sm-3">Type:</dt>
                        <dd class="col-sm-9"><span class="badge bg-info">@Model.Type</span></dd>

                        <dt class="col-sm-3">Required:</dt>
                        <dd class="col-sm-9">
                            @if (Model.IsRequired)
                            {
                                <span class="badge bg-warning">Yes</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">No</span>
                            }
                        </dd>

                        @if (Model.Type == Pioneers.Core.Models.PropertyDataType.Dropdown && Model.DropdownOptions.Any())
                        {
                            <dt class="col-sm-3">Options:</dt>
                            <dd class="col-sm-9">
                                @foreach (var option in Model.DropdownOptions)
                                {
                                    <span class="badge bg-light text-dark me-1">@option.Value</span>
                                }
                            </dd>
                        }
                    </dl>

                    <form asp-action="Delete" method="post" class="d-inline">
                        <input asp-for="Id" type="hidden" />
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Yes, Delete
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Cancel
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>