@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Advanced Employee Management System</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="~/css/home.css" />
  </head>
  <body>
    <!-- Animated Background -->
    <div class="bg-animated">
      <div class="floating-shapes"></div>
      <div class="floating-shapes"></div>
      <div class="floating-shapes"></div>
    </div>



    <div class="container mt-4">

      <div id="dashboard" class="page active">
        <div class="hero-container">
          <h3 class="hero-title">Welcome to Employee Management System</h1>
          <p class="lead mb-4">
            Smart employee management system with flexible and customizable
            properties
          </p>

        <div class="row">
          <div class="col-md-6 mb-4">
            <div class="smart-card h-100">
              <div class="d-flex align-items-center mb-3">
                <div class="bg-primary rounded-circle p-3 me-3">
                  <i class="bi bi-people-fill text-white fs-4"></i>
                </div>
                <div>
                  <h5 class="mb-1">Employee Management</h5>
                  <small class="text-muted">Add and manage employee data</small>
                </div>
              </div>
              <div class="d-flex gap-2">
                <a
                  class="btn btn-primary flex-fill" asp-action="Index" asp-controller="Employee"
                
                >
                  <i class="bi bi-eye"></i> View All
                </a>
                <a
                  class="btn btn-success flex-fill"
                  asp-action="Create" asp-controller="Employee"
                >
                  <i class="bi bi-plus"></i> Add New
                </a>
              </div>
            </div>
          </div>
          <div class="col-md-6 mb-4">
            <div class="smart-card h-100">
              <div class="d-flex align-items-center mb-3">
                <div class="bg-success rounded-circle p-3 me-3">
                  <i class="bi bi-sliders text-white fs-4"></i>
                </div>
                <div>
                  <h5 class="mb-1">Custom Properties</h5>
                  <small class="text-muted"
                    >Create and manage flexible properties</small
                  >
                </div>
              </div>
              <div class="d-flex gap-2">
                <a
                  class="btn btn-primary flex-fill"
                  asp-action="Index" asp-controller="CustomProperty"
                >
                  <i class="bi bi-list"></i> Manage
                </a>
                <a
                  class="btn btn-success flex-fill"
                 asp-action="Create" asp-controller="CustomProperty"
                >
                  <i class="bi bi-plus"></i> Create Property
                </a>
              </div>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-4 mb-3">
            <div class="smart-card text-center h-100">
              <i class="bi bi-magic text-primary fs-1 mb-3"></i>
              <h6>Dynamic Forms</h6>
              <p class="small text-muted">
                Forms are automatically generated based on defined properties
              </p>
            </div>
          </div>
          <div class="col-md-4 mb-3">
            <div class="smart-card text-center h-100">
              <i class="bi bi-shield-check text-success fs-1 mb-3"></i>
              <h6>Smart Validation</h6>
              <p class="small text-muted">
                Data validation based on each property type
              </p>
            </div>
          </div>
          <div class="col-md-4 mb-3">
            <div class="smart-card text-center h-100">
              <i class="bi bi-graph-up text-info fs-1 mb-3"></i>
              <h6>Scalable</h6>
              <p class="small text-muted">
                Supports any number of properties without code modification
              </p>
            </div>
          </div>
        </div>
      </div>

      <div id="properties" class="page">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h2>
            <i class="bi bi-sliders me-2"></i>Custom Properties Management
          </h2>
          <button class="btn btn-success" onclick="showPage('property-create')">
            <i class="bi bi-plus-circle me-2"></i>Create New Property
          </button>
        </div>

      </div>
      </div>
    </div>
  </body>
</html>
